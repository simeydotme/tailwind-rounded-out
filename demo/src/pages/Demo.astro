<script defer>
  const tabContainer = document.querySelector('[role="tablist"]');
  const tabButtons = tabContainer ? Array.from(tabContainer.querySelectorAll(".tab-button")) : [];
  const tabPanels = tabContainer ? Array.from(document.querySelectorAll(".tab-panel")) : [];

  const activeClasses = ["bg-blue-500", "z-10", "text-slate-50"];
  const inactiveClasses = [
    "bg-blue-300",
    "text-slate-600",
    "transition-colors",
    "duration-150",
    "ease-in-out",
    "hover:bg-blue-400",
    "focus:outline-none",
    "focus:bg-blue-500",
    "focus:text-slate-50",
    "focus:z-10",
    "hover:z-10",
  ];

  function styleTabs() {
    tabButtons.forEach((button) => {
      if (button.getAttribute("aria-selected") === "true") {
        button.classList.remove(...inactiveClasses);
        button.classList.add(...activeClasses);
      } else {
        button.classList.remove(...activeClasses);
        button.classList.add(...inactiveClasses);
      }
    });
  }

  if (tabContainer) {
    tabContainer.addEventListener("click", (e) => {
      const clickedTab = e.target.closest(".tab-button");
      if (!clickedTab) return;

      const clickedTabIndex = tabButtons.indexOf(clickedTab);

      // Deactivate all tabs and hide all panels
      tabButtons.forEach((button, index) => {
        button.setAttribute("aria-selected", "false");
        button.setAttribute("tabindex", "-1");
        if (tabPanels[index]) tabPanels[index].classList.add("hidden");
      });

      // Activate clicked tab and show its panel
      clickedTab.setAttribute("aria-selected", "true");
      clickedTab.setAttribute("tabindex", "0");
      if (tabPanels[clickedTabIndex]) tabPanels[clickedTabIndex].classList.remove("hidden");

      styleTabs();
      clickedTab.focus();
    });

    // Set initial styles
    styleTabs();
  }
</script>

